{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "noImplicitAny": true,
    "pretty": true,
    "sourceMap": true,
    "target": "es6",
    "resolveJsonModule": true,
    "outDir": "./dist"
  },
  "include": [
    "src/app.ts",
    "src/server.ts",
    "src/config/*.ts",
    "src/models/*.ts",
    "src/routes/**/*.ts",
    "src/tests/**/*.ts"
  ],
  "exclude": [
    "../node_modules"
  ]
}
